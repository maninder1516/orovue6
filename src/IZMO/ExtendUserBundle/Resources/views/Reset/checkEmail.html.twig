{% extends '@OroUser/layout.html.twig' %}

{% block bodyClass %}login-page{% endblock %}
{% block messages %}
    {% set messagesContent = parent() %}
    <style type="text/css">
        .login-page {
            background: url(../../bundles/izmoextendui/img/background.jpg?v=bd889d4e) no-repeat 50% 50% #fff;
            background-size: cover;
            height: 100%;
            min-height: 280px;
            overflow: visible;
        }
    </style>
{% endblock messages %}

{% block content %}
<div class="container">
    <div class="form-wrapper">
        <div class="form-wrapper__inner">
            <form action="" class="form-signin">
                <div class="title-box">
                    <h2 class="title">{{ 'oro.user.password.reset_password.title'|trans }}</h2>
                </div>
                <fieldset>
                    <div class="alert alert-success" role="alert">
                        {{ 'oro.user.password.reset_password.message'|trans({ '%email%': email }) }}
                    </div>
                    <a href="{{ path('oro_user_security_login') }}">&laquo; {{ 'Return to Login'|trans }}</a>
                </fieldset>
            </form>
        </div>
        <div class="login-copyright">{{ 'oro.copyright'|trans({ '{{year}}': 'now'|date('Y') }) }}</div>
    </div>
</div>
{% endblock %}
